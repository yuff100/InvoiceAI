{
  "functions": {
    "api/qiniu/signature.ts": {
      "maxDuration": 30
    },
    "api/ocr/process.ts": {
      "maxDuration": 120,
      "includeFiles": "lib/**",
      "env": {
        "ZHIPU_API_KEY": "@env:ZHIPU_API_KEY",
        "OCR_PROVIDER": "@env:OCR_PROVIDER",
        "TESSERACT_API_URL": "@env:TESSERACT_API_URL"
      }
    },
    "api/tesseract/ocr.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}